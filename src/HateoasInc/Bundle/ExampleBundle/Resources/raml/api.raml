      201:
  /{article-ids}:
    get:
      description: Retrieves one or more articles.
      responses:
        200:
    put:
      description: Updates one or more articles.
      responses:
        204:
    delete:
      description: Deletes one or more articles.
/posts:
  displayName: Posts
  get:
    description: Retrieves one or more posts.
    is: [paginated]
    responses:
      200:
  post:
    description: Creates one or more posts.
