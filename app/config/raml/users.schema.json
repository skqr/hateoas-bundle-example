{
    "$schema": "http://json-schema.org/schema",
    "type": "object",
    "description": "A user.",
    "properties": {
        "users": {
            "type": "object",
            "properties": {
                "id":  { "type": "string" },
                "content": { "type": "string" },
                "links": {
                    "type": "object",
                    "properties": {
                        "user-groups": { "type": "array" }
                    },
                    "required": [ "user-groups" ]
                }
            },
            "required": [ "username", "email", "name", "surname" ]
        }
    }
}
